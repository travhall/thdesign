---
import { Icon } from "astro-icon/components";
import ThemeIcon from "./ThemeIcon.astro";
---

<div class="skip-link sr-only focus-within:not-sr-only">
  <span
    class="text-sm inline-flex gap-1 p-6 border border-t-0 border-teal-950 dark:border-white text-teal-950 dark:text-white rounded-br-xl rounded-bl-xl transition-all"
  >
    Skip to <a href="#main">content</a> or <a href="#footer">footer</a>
  </span>
</div>
<header class="site-header w-full flex flex-row items-center justify-between">
  <a
    href="/thdesign"
    class="mx-6 lg:mx-12 xl:mx-16 my-8 inline-flex flex-row gap-2 items-center font-semibold hover:font-black text-teal-950 dark:text-white transition-all"
  >
    <Icon
      name="logo"
      class="w-16 md:w-12 lg:w-8 h-auto fill-teal-950 dark:fill-white transition-all"
    />
    <span class="text-sm py-1 hidden lg:inline-block">travishall.design</span>
  </a>
  <div class="header-menu p-6 lg:p-8 xl:p-12">
    <ThemeIcon />
  </div>
</header>
