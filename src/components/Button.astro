---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {
  type?: "button" | "submit" | "reset";
  size?: "sm" | "md" | "lg";
  classes?: string;
}

const { type = "button", size = "md", classes, ...rest } = Astro.props;
---

<button
  {type}
  data-size={size}
  class:list={[
    "font-sans font-semibold text-teal-900 dark:text-amber-50 bg-teal-100/00 dark:bg-amber-900/00 hover:bg-teal-100/50 dark:hover:bg-amber-900/50 border-2 border-teal-900 dark:border-amber-50 shadow-[-4px_4px_0_#115e59] hover:shadow-[-2px_2px_0_#115e59] dark:shadow-[-4px_4px_0_#fffbeb] dark:hover:shadow-[-2px_2px_0_#fffbeb] transition-all ease-in-out duration-300 me-2 focus-visible:ring outline-0 focus-visible:ring-offset-2 hover:scale-105 inline-flex flex-row gap-1",
    size === "sm" && "text-xs rounded-md py-2 px-4",
    size === "md" && "text-base rounded-lg py-3 px-6",
    size === "lg" && "text-xl rounded-xl py-4 px-8",
    classes,
  ]}
  {...rest}
>
  <slot />
</button>
